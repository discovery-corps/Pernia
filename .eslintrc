{
  "extends" : "airbnb",
  "rules": {
    "comma-dangle": [ "error", "never" ],
    "eol-last": "off",
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "no-trailing-spaces": "error",
    "space-before-function-paren": [ "error", "never" ],
    "react/jsx-filename-extension": "off",

    "keyword-spacing": [
      "error",
      {
        "before": false,
        "after": false,
        "overrides": {
          "case": {
            "after": true
          },
          "catch": {
            "before": true
          },
          "const": {
            "after": true
          },
          "do": {
            "after": true
          },
          "else": {
            "before": true,
            "after": true
          },
          "export": {
            "after": true
          },
          "from": {
            "before": true,
            "after": true
          },
          "import": {
            "before": true,
            "after": true
          },
          "return": {
            "before": true,
            "after": true
          },
          "this": {
            "before": true
          },
          "try": {
            "after": true
          },
          "while": {
            "before": true
          }
        }
      }
    ]
  }
}